                                            Stretch="Fill"
                                            Style="{StaticResource SearchButtonPath}" />
                                    </Canvas>
                                </Viewbox>
                            </Button.Content>
                        </Button>
                        <ToggleButton
                            Name="CheckedFilterButton"
                            Grid.Column="3"
                            Width="32"
                            Height="32"
                            Margin="0,1"
