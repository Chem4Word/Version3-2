<Window
    x:Class="Chem4Word.ACME.Controls.SettingsHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chem4Word.ACME.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ACME Settings"
    MinWidth="450"
    MinHeight="300"
    Closing="SettingsHost_OnClosing"
    ContentRendered="SettingsHost_OnContentRendered"
    Icon="/Chem4Word.ACME;component/Resources/ms-word-16.ico"
    Loaded="SettingsHost_OnLoaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid>
        <local:AcmeSettings x:Name="UcSettings" />
    </Grid>
</Window>