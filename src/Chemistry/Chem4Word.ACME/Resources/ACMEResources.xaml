    <!--  thumb styles  -->
    <SolidColorBrush x:Key="DrawBondBrush" Color="OrangeRed" />
    <SolidColorBrush
        x:Key="GrabHandleFillBrush"
        Opacity="0.75"
        Color="Orange" />
    <SolidColorBrush
        x:Key="AtomBondSelectorBrush"
        Opacity="0.5"
        Color="DarkOrange" />

    <SolidColorBrush
        x:Key="GrabHandleBorderBrush"
        Opacity="0.8"
        Color="DarkOrange" />
    <SolidColorBrush
        x:Key="ThumbFillBrush"
        Opacity="0.25"
        Color="Gold" />

    <!--  manipulator styles  -->
    <Pen x:Key="GrabHandlePen" Thickness="1.0">
        <Pen.Brush>
            <StaticResource ResourceKey="GrabHandleBorderBrush" />
        </Pen.Brush>
    </Pen>
    <Style x:Key="AtomThumb" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource GrabHandleFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse
                        Width="12"
                        Height="12"
                        Fill="{StaticResource GrabHandleFillBrush}"
                        Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GrabHandleStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="Background" Value="{StaticResource ThumbFillBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GrabHandleBorderBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Ellipse Fill="{x:Static SystemColors.WindowBrush}" Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="BigThumbStyle"
        BasedOn="{StaticResource GrabHandleStyle}"
        TargetType="Thumb">

        <Setter Property="Background" Value="{StaticResource ThumbFillBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{StaticResource ThumbFillBrush}" Stroke="{StaticResource GrabHandleBorderBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="GroupHandleStyle"
        BasedOn="{StaticResource GrabHandleStyle}"
        TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
