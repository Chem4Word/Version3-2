<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:acme="clr-namespace:Chem4Word.ACME"
    xmlns:graphics="clr-namespace:Chem4Word.ACME.Graphics">

    <!--  Simple shapes for use in menus, buttons etc  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml" />
        <ResourceDictionary Source="BondOptions.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  standard livery for Chem4Word  -->
    <SolidColorBrush x:Key="Chem4WordBrush" Color="#2A579A" />
    <SolidColorBrush x:Key="PinkLace" Color="#FFDDF4" />
    <SolidColorBrush x:Key="ACMEToolbarBackground" Color="#F1F1F1" />

    <Style x:Key="WedgeBondStyle" TargetType="Path">
        <Setter Property="Fill" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <Setter Property="Height" Value="14" />
        <Setter Property="Stroke" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <Setter Property="Width" Value="25" />
        <Setter Property="Data" Value="M 0,7 L 25,10 l 0 -7 Z" />
    </Style>

    <!--  styles for bond fills  -->
    <SolidColorBrush x:Key="BlockedAdornerBrush" Color="LightGray" />

    <LinearGradientBrush x:Key="HatchBondBrush" MappingMode="Absolute" SpreadMethod="Repeat" StartPoint="50,0" EndPoint="50,5">
        <GradientStop Offset="0" Color="{StaticResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <GradientStop Offset="0.1" Color="{StaticResource {x:Static SystemColors.WindowTextBrushKey}}" />
        <GradientStop Offset="0.1" Color="Transparent" />
        <GradientStop Offset="0.2" Color="Transparent" />
    </LinearGradientBrush>

    <Style
        x:Key="HatchBondStyle"
        BasedOn="{StaticResource WedgeBondStyle}"
        TargetType="Path">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush MappingMode="Absolute" SpreadMethod="Repeat" StartPoint="50,0" EndPoint="50,5">
                    <GradientStop Offset="0" Color="{x:Static SystemColors.WindowTextColor}" />
                    <GradientStop Offset="0.2" Color="{x:Static SystemColors.WindowTextColor}" />
                    <GradientStop Offset="0.2" Color="Transparent" />
                    <GradientStop Offset="0.4" Color="Transparent" />
                    <LinearGradientBrush.Transform>
                        <RotateTransform Angle="90" />
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="{x:Null}" />
    </Style>

    <Style x:Key="RingButtonGraphic" TargetType="{x:Type Path}">
        <Setter Property="Height" Value="24" />
        <Setter Property="Stroke" Value="{StaticResource ResourceKey=Chem4WordBrush}" />
        <Setter Property="Width" Value="24" />
    </Style>
