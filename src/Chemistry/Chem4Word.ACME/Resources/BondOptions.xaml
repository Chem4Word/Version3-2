        <acme:BondOption
            Id="10"
            Order="S"
            Stereo="Indeterminate">
            <acme:BondOption.BondGraphic>
                <DrawingGroup>
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <PathGeometry>M15,0 Q5,5 15,10 25,15 15,20 5,25 15,30, 25,35, 15,40</PathGeometry>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen
                                Brush="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                                EndLineCap="Flat"
                                StartLineCap="Flat"
                                Thickness="1.5" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                    <DrawingGroup.Transform>
                        <RotateTransform Angle="90" />
                    </DrawingGroup.Transform>
                </DrawingGroup>
            </acme:BondOption.BondGraphic>
        </acme:BondOption>

        <acme:BondOption
            Id="11"
            Order="D"
            Stereo="Indeterminate">
            <acme:BondOption.BondGraphic>
                <DrawingGroup>
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <PathGeometry>M 0,5 L 22,0 Z M 0,0 L 22,5 Z</PathGeometry>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" Thickness="2" />
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </acme:BondOption.BondGraphic>
        </acme:BondOption>
    </x:Array>
</ResourceDictionary>